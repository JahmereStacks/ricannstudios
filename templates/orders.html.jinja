<!doctype html>
<html>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body class="bg-gray-50 text-black">

{% include "components/navbar.html.jinja" %}

<main class="max-w-3xl mx-auto px-4 py-24 text-center">

  <h1 class="text-4xl font-bold tracking-tight mb-6">
    Your Orders
  </h1>

  {% if orders %}
    <div class="bg-white border border-gray-200 p-8 mb-10 text-left">
      {% for order in orders %}
        <div class="flex justify-between text-sm mb-2">
          <span>Order #{{ order["ID"] }}</span>
           <span>Status: {{ order["Status"] }}</span>
           <span>
          Date: {{ order["Timestamp"].strftime('%d %b %Y') }}
        </span>
         <span class="font-semibold">
          Total: ${{ "%.2f"|format(order["Total"]) }}
        </span>
        </div>
        <hr class="my-2">
      {% endfor %}
    </div>
  {% else %}
    <p class="text-gray-600">
      You have no orders yet.
    </p>
  {% endif %}

  <div class="text-center">
    <a
      href="/browse"
      class="inline-block bg-black text-white px-8 py-4 text-sm font-semibold tracking-wide hover:bg-gray-900 transition"
    >
      Continue Shopping
    </a>
  </div>

</main>

</body>
</html>
